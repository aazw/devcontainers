{
  "name": "vsc-devcontainers-swift",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "initializeCommand": "./build.sh",
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "runArgs": [
    "--name",
    "vsc-devcontainers-swift",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postAttachCommand": "swift --version && swift package --version"
}
